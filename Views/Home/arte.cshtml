@{
    ViewData["Title"] = "Arte";
}

<div class="aula-container">
  <img src="../Assets/Profe2.png" alt="Profe 2" class="fondo-img">
  
  <div class="desafio">
    <h1>¡Escribí "OK" antes de que Mauri te vea!</h1>
    @if (ViewBag.Error != null)
    {
        <div class="error">@ViewBag.Error</div>
    }
    <form method="post" asp-action="ArteRespuesta">
        <input type="text" name="respuesta" placeholder="Escribí rápido..." autofocus />
        <button type="submit">Enviar</button>
    </form>
  </div>
</div>